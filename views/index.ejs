<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Agendamentos</title>
    <link href="/main.min.css" rel="stylesheet" type="text/css" />
    <script src="/main.js"></script>
</head>
<body>
    <button onclick="window.location.replace('/cadastro')">Cadastrar</button>
    
    <div id="calendar"></div>
    
</body>
<script>
    let element = document.getElementById('calendar');
    let calendar = new FullCalendar.Calendar(element,{
        initalView: 'dayGridMonth',
        locale: 'pt-br',
        events: 'findAll',
        eventClick: function(info) {
            //console.log(info);
            window.location.href = `/event/${info.event.id}`;
        }
    });
    calendar.render();
    
</script>
</html>