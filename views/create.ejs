<%- include('partials/header.ejs'); %>
    <div class="container">
        <br>
        <div class="card">
            <div class="card-header">
                <h2>Cadastro de Consulta</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/cadastro">
                    <label for="name">Nome Paciente</label>
                    <input type="text" 
                        name="name" id="name"
                        class="form-control"
                        placeholder="Informe o nome do Paciente"
                        required
                        value=""/>
                    <br>
                    <label for="email">Email</label>
                    <input type="email" 
                        name="email" id="email"
                        class="form-control"
                        placeholder="Informe o email do Paciente"
                        required
                        value=""/>
                    <br>
                    <label for="cpf">CPF</label>
                    <input type="text" 
                        name="cpf" id="cpf"
                        class="form-control cpf"
                        pattern="\d{3}\.\d{3}\.\d{3}-\d{2}"
                        placeholder="Informe o cpf do Paciente"
                        required
                        value=""/>
                    <br>
                    <label for="description">Descricao</label>
                    <input type="text" 
                        name="description" id="description"
                        class="form-control"
                        placeholder="Informe a Descricao"
                        required
                        value=""/>
                    <br>
                    <label for="date">Data</label>
                    <input type="date" 
                        name="date" id="date"
                        class="form-control"
                        required
                        value=""/>
                    <br>
                    <label for="time">Horario</label>
                    <input type="time" 
                        name="time" id="time"
                        class="form-control"
                        required
                        value=""/>
                    <br>
                    <button class="btn btn-success">Cadastrar</button>
                    <a href="/cadastro" class="btn btn-warning">Limpar</a>
                </form>
            </div>
        </div>
    </div>
<%- include('partials/footer.ejs'); %>